<%= tag.div class: "item border rounded-lg shadow-sm w-full h-fit flex flex-row p-2 space-x-4 lg:space-x-0 lg:flex-col lg:items-start", id: dom_id(item) do %>
  <img class="my-2 w-[150px] border rounded-lg" src="https://generatorfun.com/code/uploads/Random-Food-image-7.jpg" />

  <div class="flex flex-col items-start justify-center space-y-5 lg:space-y-0 lg:m-0">
    <h1 class="text-lg"><%= item.name %></h1>

    <span class="text-sm font-bold"><%= number_to_currency(item.price, precision: 2) %></span>
  </div>

  <div class="flex flex-col space-y-2 mt-4">
    <%= link_to edit_item_path(item), data: { turbo_frame: :edit_item }, class: "flex flex-row items-center space-x-2 text-blue-500" do %>
      <span><%= t('items.item.edit') %></span>

      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
      </svg>
    <% end %>

    <%= link_to item, data: { turbo_method: :delete, turbo_confirm: t('helpers.alert.destroy') }, class: "flex flex-row space-x-2 items-center text-red-500" do %>
      <span><%= t('items.item.remove') %></span>

      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
    <% end %>
  </div>
<% end %>
