<div class="w-full h-full flex flex-col items-center justify-center">
  <h2 class="text-2xl mb-10"><%= t('devise.passwords.new.forgot_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="space-y-4">
      <div class="flex flex-col space-y-2">
        <%= f.label :email %>
        <%= f.email_field :email, class: "w-full py-2 px-4 border rounded-lg" %>
        <span class="text-red-500"><%= f.object.errors[:email].to_sentence %></span>
      </div>

      <div class="flex flex-col w-full justify-center items-center">
        <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: "py-2 px-4 border rounded-lg shadow bg-amber-300 text-black cursor-pointer" %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
