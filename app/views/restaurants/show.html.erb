<div class="w-full flex flex-col items-center justify-center">
   <div class="py-20 mx-auto text-center">
      <h2 class="text-3xl"><%= @restaurant.name %></h2>
    </div>

  <div class="w-full space-y-5 flex flex-col items-center">
    <% @restaurant.menu.categories.each do |category| %>
      <div class="w-11/12 border rounded-lg shadow-sm flex flex-col p-6 bg-white">
        <div class="flex flex-row items-center">
          <h1 class="text-xl"><%= category.name %></h1>

          <div class="ml-auto cursor-pointer text-blue-500">
            <svg data-accordion-target="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </div>
        </div>

        <div class="gap-4 mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
          <% category.items.each do |item| %>
            <div class="border rounded-lg shadow-sm w-full h-fit flex flex-row p-2 space-x-4 lg:space-x-0 lg:flex-col lg:items-start">
              <img class="my-2 w-[150px] border rounded-lg" src="https://generatorfun.com/code/uploads/Random-Food-image-7.jpg" />

              <div class="flex flex-col items-start justify-center space-y-5 lg:space-y-0 lg:m-0">
                <h1 class="text-lg"><%= item.name %></h1>

                <span class="text-sm font-bold"><%= number_to_currency(item.price, precision: 2) %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
