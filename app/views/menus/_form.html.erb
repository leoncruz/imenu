<div class="space-y-5">
  <%= form_with model: menu, url: url do |f| %>
    <div class="space-y-5 flex flex-col items-center">
      <div class="w-full flex justify-end">
        <%= link_to t('menus.form.add_category'), new_menu_category_path(menu), class: "py-2 px-4 text-black bg-amber-300 border rounded-lg shadow",
          data: { turbo_stream: true }
        %>
      </div>

      <% menu.categories.each do |category| %>
        <%= render category %>
      <% end %>
    </div>
  <% end %>
  <div class="w-full flex flex-col space-y-5 items-center justify-center" id="new_categories"></div>
</div>
