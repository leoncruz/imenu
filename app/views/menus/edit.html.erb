<div class="w-full flex flex-col mt-10">
  <h2 class="text-2xl text-center"><%= t('menus.edit') %></h2>

  <div class="space-y-5">
    <div class="categories space-y-5 flex flex-col items-center">
      <div class="w-full flex justify-end">
        <%= link_to t('menus.form.add_category'), new_menu_category_path(@menu), class: "py-2 px-4 text-black bg-amber-300 border rounded-lg shadow",
          data: { turbo_frame: "new_category" }
        %>
      </div>

      <%= turbo_frame_tag "new_category", class: "w-full flex flex-col space-y-5 items-center justify-center" %>

      <div class="w-full flex flex-col space-y-5 items-center justify-center" id="list_categories">
        <% @menu.categories.each do |category| %>
          <%= render category %>
        <% end %>
      </div>
    </div>
  </div>
</div>
